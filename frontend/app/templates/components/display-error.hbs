{{#if messageIsHTMLDocument}}
  <iframe srcdoc={{error.message}}></iframe>
{{else if error.isAdapterError}}
  <pre class="error">{{error.message}}</pre>
{{else if error.errors}}
  {{#if error.message}}<pre class="error">{{error.message}}</pre>{{/if}}
  <ul>
    {{#each error.errors as |error|}}
      <li>{{error.code}} &ndash; {{error.title}}</li>
    {{/each}}
  </ul>
{{else if error.message}}
  <p>{{error.message}}</p>
{{else}}
  <p>Something unexpected happened</p>
{{/if}}
{{#if error.stack}}
  <button class="btn btn-primary" onclick={{toggle "showStack" this}}>
    Show stack
  </button>
  {{#link-to "people" class="btn btn-primary"}}Bring me home{{/link-to}}
  {{#if showStack}}
    <pre class="error-stack">{{error.stack}}</pre>
  {{/if}}
{{/if}}

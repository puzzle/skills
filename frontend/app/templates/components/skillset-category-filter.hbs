<label id="category-filter-label" class="description">Kategorie</label>
<div id="category-filter-dropdown">
  {{#power-select
  selected=selectedCategory
  options=categories
  searchEnabled=false
  onfocus=(action "handleFocus")
  onblur=(action "handleBlur")
  onchange=(action "setCategoryFilter")
  as |category|
  }}
    {{category.title}}
  {{/power-select}}
</div>

<div class="card">
  <div class="card-header bg-primary">
    <div class="row">
      <div class="col-sm-6">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">Profile</a>
      </div>
      <div class="col-sm-6 text-right d-block">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseThree"><i class="fa angle"></i></a>
      </div>
    </div>
  </div>
  <div id="collapseThree" class="collapse show border border-primary rounded-bottom">
    <div class="card-body">
      {{#each originalPeople as |person|}}
        <div class="row mb-1">
          <div class="col-sm-3">
            {{#link-to "person" person.id}}
              <span class="badge badge-info profil-knopf" href="#">{{person.name}}</span>
            {{/link-to}}
          </div>
          <div class="col-sm-3">
            <span class="badge border profil-knopf" href="#">{{person.title}}</span>
          </div>
        </div>
      {{/each}}
      <div class="row mb-1">
        <div class="col">
          {{#link-to "people.new"}}
            <a class="ml-1">
              <i class="fa fa-plus-square-o" aria-hidden="true">
              </i>
              Neues Profil
            </a>
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table table-sm daterange-table">
  <thead>
    <tr>
      <td scope="col"></td>
      <td class="text-center" scope="col">Monat</td>
      <td class="text-center" scope="col">Jahr</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class="align-middle" scope="row">
        Von:
      </th>
      <td>
        {{#power-select
        selected=selectedMonthFrom
        options=monthsFromSelect
        searchEnabled=false
        onfocus=(action "handleFocus")
        onblur=(action "handleBlur")
        onchange=(action "setMonth" "From")
        onkeydown=(action "setWithTab" "setMonth")
        as |month|
        }}
          {{month}}
        {{/power-select}}
      </td>
      <td>
        <input type="number" value={{entity.yearFrom}} onchange={{action "setYearFrom" value="target.value"}} max="9999"
        class={{concat (if yearFromInvalid "invalid") " year form-control" }} placeholder="von">
      </td>
    </tr>
    <tr>
      <th class="align-middle" scope="row">
        Bis:
      </th>
      <td>
        {{#power-select
        selected=selectedMonthTo
        options=monthsToSelect
        searchEnabled=false
        onfocus=(action "handleFocus")
        onblur=(action "handleBlur")
        onchange=(action "setMonth" "To")
        onkeydown=(action "setWithTab" "setMonth" "To")
        as |month|
        }}
          {{month}}
        {{/power-select}}
      </td>
      <td>
        {{#if (not-eq selectedMonthTo "heute")}}
          <input type="number" value={{entity.yearTo}} max="9999" onchange={{action "setYearTo" value="target.value"}}
            class={{concat (if yearFromInvalid "invalid") " year form-control" }} placeholder="bis">
        {{/if}}
      </td>
    </tr>
  </tbody>
</table>

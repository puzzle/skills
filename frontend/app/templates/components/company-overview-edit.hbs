<div id="profil-uebersicht">
  {{#with (changeset this.company this.validations) as |companyChangeset|}}
    {{#form-for companyChangeset submit=(action "submit") as |f|}}
      <div class="card-header bg-primary">
        <div class="row">
          <div class="col-sm-6">
            <a class="card-link text-white" href="#">Ãœbersicht</a>
          </div>
          <div class="col-sm-6 text-right d-block text-white">
            {{#if (not-eq this.company.companyType "mine")}}
              <div id="delete-company-icon">
                <DeleteWithConfirmation @entry={{this.company}} @transitionTo="companies" @tagName="span" />
              </div>
            {{/if}}
            <a {{action "submit" companyChangeset}} role="button" id="submit-button" class="card-link text-white">
              <i class="fa save"></i>
            </a>
            <a onclick={{action "abortEdit"}} role="button" class="card-link text-white">
              <i class="fa abort"></i>
            </a>
            <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#">
              <i class="fa angle"></i>
            </a>
          </div>
        </div>
      </div>
      <div id="collapseOne" class="collapse show border border-primary rounded-bottom">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-4">
              <table class="table-company">
                <tbody>
                  <tr>
                    <td>{{f.text-field "name" label="Name" required=true}}</td>
                  </tr>
                  <tr>
                    <td>
                      <button class="btn btn-success form-field--control" type="button" {{action "addLocations" this.company}}>Neue Adresse</button>
                    </td>
                  </tr>
                  {{#each this.company.locations as |location|}}
                    {{#fields-for location as |l|}}
                      <tr>
                        <td class="nextToDelete">
                          {{l.text-field "location" label="Standort"}}
                          <DeleteWithConfirmation @entry={{location}} />
                        </td>
                      </tr>
                    {{/fields-for}}
                  {{/each}}
                  <tr>
                    <td>{{f.text-field "web" label="Web"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "email" label="Email"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "phone" label="Telefon"}}</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-sm-4">
              <table class="table-company">
                <tbody>
                  <tr>
                    <td>{{f.text-field "partnermanager" label="PM"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "contactPerson" label="Ansprechperson"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "emailContactPerson" label="Email"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "phoneContactPerson" label="Telefon"}}</td>
                  </tr>
                  <tr>
                    <td>{{f.text-field "crm" label="CRM"}}</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-sm-4">
              <table class="table-company">
                <tbody>
                  <tr>
                    <td>{{f.text-field "level" label="Level"}}</td>
                  </tr>
                  <tr>
                    <td>
                      <button class ="btn btn-success form-field--control" type="button" {{action "addEmployeeQuantity" this.company}}>Neue Mitarbeiter-Anzahl</button>
                    </td>
                  </tr>
                  {{#each this.company.employeeQuantities as |quantity|}}
                    {{#fields-for quantity as |q|}}
                      <tr>
                        <td class="nextToDelete">
                          {{q.text-field "category" label="Kategorie"}}
                          <DeleteWithConfirmation @entry={{quantity}} />
                        </td>
                      </tr>
                      <tr>
                        <td>
                          {{q.text-field "quantity" label="Anzahl"}}
                        </td>
                      </tr>
                    {{/fields-for}}
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    {{/form-for}}
  {{/with}}
</div>

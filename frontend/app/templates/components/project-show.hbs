<div class="mb-2">
  <div class="card-header bg-info">
    <div class="row">
      <div id="date-title" class="col-sm-6 project-title-text cv-search-searchable">
        {{if this.project.monthFrom (concat (moment-format this.project.monthFrom "MM" "MM") ".")}}{{this.project.yearFrom}}
        {{#if (eq this.project.yearTo null)}}
          - heute
        {{else if (or (not-eq this.project.yearFrom this.project.yearTo) (not-eq this.project.monthFrom this.project.monthTo))}}
          - {{if this.project.monthTo (concat (moment-format this.project.monthTo "MM" "MM") ".")}}{{this.project.yearTo}}
        {{/if}}
        | {{this.project.title}}
      </div>
    </div>
  </div>
  <div class="border border-info rounded-bottom show">
    <div class="card-body d-flex flex-column">
      <table class="table table-borderless table-sm">
        <tbody>
          <tr>
            <th scope="row" class="w-25"> {{t "project-show.description"}} </th>
            <td id="description" class="text-table-left cv-search-searchable">{{this.project.description}}</td>
          </tr>
          <tr>
            <th scope="row" class="w-25"> {{t "project-show.role"}} </th>
            <td id="role" class="cv-search-searchable">{{this.project.role}}</td>
          </tr>
          <tr>
            <th scope="row" class="w-25"> {{t "project-show.technologies"}} </th>
            <td id="technology" class="cv-search-searchable">{{this.project.technology}}</td>
          </tr>
        </tbody>
      </table>
      <div class="mt-auto">
        <a id="project-edit-button" onclick={{action this.toggleEditProject}} role="button" class="edit-buttons"><i class="fa fa-edit"></i>{{t "project-show.edit"}}</a>
      </div>
    </div>
  </div>
</div>

  {{skill-show skill=currentShowSkill}}
<div class="row mb-3">
  <div class="col-sm-12 search-skill-field">
    {{list-filter}}
  </div>
  <div class="col-sm-4">
    {{skillset-defaultset-filter}}
  </div>
  <div class="col-sm-4">
    {{skillset-category-filter}}
  </div>
  <div class="col-sm-4">
    {{!-- Insert correct link-to route once finished --}}
    {{#link-to "skills"}}
      <a class="float-right">
        <i class="fa fa-download" aria-hidden="true">
        </i>
        CSV Export
      </a>
    {{/link-to}}
    {{!-- Insert correct link-to route once finished --}}
    {{#link-to "skills"}}
      <a class="float-right mr-5">
        <i class="fa fa-plus-square-o" aria-hidden="true">
        </i>
        Neuer Puzzle-Skill
      </a>
    {{/link-to}}
  </div>
</div>
<div class="mb-end">
  <table id="skills-list-table" class="table">
    <thead>
      <tr>
        <th scope="col" class="bg-info header-text text-secondary">Skill</th>
        <th scope="col" class="text-secondary">Radar</th>
        <th scope="col" class="bg-info text-secondary">Portfolio</th>
        <th scope="col" class="text-secondary">Kategorie</th>
        <th scope="col" class="bg-info text-secondary">Subkategorie</th>
        <th scope="col" class="text-secondary">Default-Set</th>
        <th scope="col" class="bg-info text-secondary">Members</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedSkills as |skill|}}
        <tr role="button" onclick={{action 'toggleSkillShow' skill}} data-toggle="modal" data-target="#skill-show-modal">
          <td class="skillname">{{skill.title}}</td>
          <td class="">{{if skill.radar skill.radar "-"}}</td>
          <td>{{if skill.portfolio skill.portfolio "-"}}</td>
          <td class="">{{if skill.parentCategory skill.parentCategory.title "-"}}</td>
          <td>{{if skill.category skill.category.title "-"}}</td>
          <td class="">{{if (eq skill.defaultSet null) "NEU" (if skill.defaultSet "Ja" "Nein")}}</td>
          <td>{{skill.people.length}}</td>
          <td class=""><a class="edit-buttons"><i class="fa fa-pencil"></i></a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

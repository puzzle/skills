<div id="educationsHeader" class="card-header bg-info">
  <div class="row">
    <div class="col-sm-6 header-text" id="amount-of-educations">
      {{t "educations-show.education"}} ({{this.amountOfEducations}})
    </div>
  </div>
</div>
<div class="border border-info rounded-bottom">
  <div class="card-body d-flex flex-column">
    {{#unless this.isNewRecord}}
      <div class="mb-2">
        <a id="add-education-button" {{on "click" this.toggleEducationNew}} role="button" class="edit-buttons"><i class="fa add"></i>{{t "educations-show.add"}}</a>
      </div>
    {{/unless}}
    <div id="educations-content-show">
      {{#if this.isNewRecord}}
        <EducationForm @person={{@person}} @done={{toggleEducationNew}}/>
      {{/if}}
      {{#each this.sortedEducations as |education|}}
        {{#if (eq this.editingEducation education)}}
          <EducationForm @person={{@person}} @education={{education}} @done={{this.abortEducationEdit}}/>
        {{else}}
          <div class="line education-row {{unless this.editingEducation "people-skill-link"}}" {{on "click" (fn this.setEditingEducation education)}} role="button">
            <EducationShow @education={{education}}/>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

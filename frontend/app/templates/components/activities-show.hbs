<div id="activity">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-6 header-text">
        Stationen ({{amountOfActivities}})
      </div>
    </div>
  </div>
  <div class="border border-info rounded-bottom">
    <div class="card-body d-flex flex-column">
      <div class="mb-2">
        <a onclick={{action 'toggleActivityNew' true}} role="button" class="{{~unless activityNew 'edit-buttons'~}}"><i class="fa {{~unless activityNew ' add'~}}"></i>{{~unless activityNew ' Station hinzuf√ºgen'~}}</a>
      </div>
      <div id="competence-content-show" class="mb-2">
        {{component (if activityNew 'activity-new')
            personId=person.id
            done=(action 'toggleActivityNew')}}
        {{#each sortedActivities as |activity|}}
          <div class="zeile">
            <div class="row">
              <div class="col-sm-3 text-center">
                {{if activity.monthFrom (concat (moment-format activity.monthFrom 'MM' 'MM') '.')}}{{activity.yearFrom}}
                {{#if (eq activity.yearTo null)}}
                  - heute
                {{else if (or (not-eq activity.yearFrom activity.yearTo) (not-eq activity.monthFrom activity.monthTo))}}
                  - {{if activity.monthTo (concat (moment-format activity.monthTo 'MM' 'MM') '.')}}{{activity.yearTo}}
                {{/if}}
              </div>
              <div class="col-sm-9">
                <strong>{{activity.role}}</strong>
                <br>{{activity.lineBreakDescription}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      {{#if sortedActivities}}
        {{#unless activityNew}}
          <div class="mt-auto">
            <a onclick={{activitiesEditing}} role="button" class="edit-buttons"><i class="fa fa-edit"></i> Bearbeiten</a>
          </div>
        {{/unless}}
      {{/if}}
    </div>
  </div>
</div>

<div id="activity">
  <div class="card-header bg-primary">
    <div class="row">
      <div class="col-sm-6">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseActivity">Stationen ({{amountOfActivities}})</a>
      </div>
      <div class="col-sm-6 text-right d-block">
        <a class="card-link text-white" data-toggle="collapse" data-parent="#accordion" href="#collapseActivity"><i class="fa angle"></i></a>
      </div>
    </div>
  </div>
  <div id="collapseActivity" class="collapse show border border-primary rounded-bottom">
    <div class="card-body d-flex flex-column">
      <div class="mb-2">
        <a onclick={{action (toggle 'activityNew' this)}} role="button" class="{{~if activityNew 'abort-edit-buttons' 'edit-buttons'~}}"><i class="fa {{~if activityNew ' abort' ' add'~}}"></i>{{~if activityNew ' hinzufügen abbrechen' ' Station hinzufügen'~}}</a>
      </div>
      <div id="competence-content-show" class="mb-2">
        {{component (if activityNew 'activity-new')
            personId=person.id
            done=(action (toggle 'activityNew' this))}}
        {{#each filteredActivities as |activity|}}
          <div class="zeile">
            <div class="row">
              <div class="col-sm-3 centered-content text-center">
                {{activity.year_from}}
                {{#if (eq activity.year_to null)}}
                  - heute
                {{else if (not-eq activity.year_from activity.year_to)}}
                  - {{activity.year_to}}
                {{/if}}
              </div>
              <div class="col-sm-9">
                <strong>{{activity.role}}</strong>
                <br>{{~activity.description~}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <div class="mt-auto">
        <a onclick={{activitiesEditing}} role="button" class="edit-buttons"><i class="fa fa-pencil"></i> Bearbeiten</a>
      </div>
    </div>
  </div>
</div>

<form onsubmit={{action "submit" this.newProject}} id="form_project">
  <div class="mb-2" id="project-content-edit">
    <div class="card-header bg-info">
      <div class="row">
        <div class="col-sm-12">
          Neues Projekt erfassen
        </div>
      </div>
    </div>
    <div class="border border-info rounded-bottom">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3">
            <div class="input-group centered-content-input">
              <DaterangeEdit @entity={{this.newProject}} />
            </div>
          </div>
          <div class="col-sm-6">
            <label for={{concat this.elementId "-name"}}>Projekt</label>
            <Input @id={{concat this.elementId "-name"}} @value={{this.newProject.title}} class="form-control mb-2" />
            <label for={{concat this.elementId "-desc"}}>Beschreibung</label>
            <Textarea @id={{concat this.elementId "-desc"}} @value={{this.newProject.description}} class="form-control" />            
            <label for={{concat this.elementId "-role"}}>Rolle und Aufgaben</label>
            <Textarea @id={{concat this.elementId "-role"}} @value={{this.newProject.role}} class="form-control" />            
            <label for={{concat this.elementId "-tech"}}>Eingesetzte Technologien</label>
            <Textarea @id={{concat this.elementId "-tech"}} @value={{this.newProject.technology}} class="form-control" />          
          </div>
          <div class="col-md-3 centered-content d-flex flex-column mt-4 px-5">
            <button onclick={{action "submit" this.newProject false}} role="button" id="submit-button" class="btn btn-primary m-2">Speichern</button>
            <button onclick={{action "submit" this.newProject true}} role="button" class="btn btn-info border m-2">Speichern & Neu</button>
            <a href="#" onclick={{action "abortNew"}} role="button" id="submit-button" class="abort-edit-buttons text-center mx-4">Abbrechen</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

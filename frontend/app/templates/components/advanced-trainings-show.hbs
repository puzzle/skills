<div class="advancedTraining">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-6 header-text">
        Weiterbildung ({{amountOfAdvancedTrainings}})
      </div>
    </div>
  </div>
  <div class="border border-info rounded-bottom">
    <div class="card-body d-flex flex-column">
      <div class="mb-2">
        <a onclick={{action 'toggleAdvancedTrainingNew' true}} role="button" class="{{~unless advanced-trainingNew 'edit-buttons'~}}"><i class="fa {{~unless advanced-trainingNew ' add'~}}"></i> {{~unless advanced-trainingNew ' Weiterbildung hinzuf√ºgen'~}}</a>
      </div>
      <div id="advancedtraining-content-show" class="mb-2">
        {{component (if advanced-trainingNew 'advanced-training-new')
            personId=person.id
            done=(action 'toggleAdvancedTrainingNew')}}
        {{#each sortedAdvancedTrainings as |advanced-training|}}
          <div class="zeile">
            <div class="row">
              <div class="col-sm-3 text-center">
                {{if advanced-training.monthFrom (concat (moment-format advanced-training.monthFrom 'MM' 'MM') '.')}}{{advanced-training.yearFrom}}
                {{#if (eq advanced-training.yearTo null)}}
                  - heute
                {{else if (or (not-eq advanced-training.yearFrom advanced-training.yearTo) (not-eq advanced-training.monthFrom advanced-training.monthTo))}}
                  - {{if advanced-training.monthTo (concat (moment-format advanced-training.monthTo 'MM' 'MM') '.')}}{{advanced-training.yearTo}}
                {{/if}}
              </div>
              <div class="col-sm-9">
                {{advanced-training.lineBreakDescription}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      {{#if sortedAdvancedTrainings}}
        {{#unless advanced-trainingNew}}
          <div class="mt-auto">
            <a onclick={{advancedTrainingsEditing}} role="button" class="edit-buttons"><i class="fa fa-edit"></i> Bearbeiten</a>
          </div>
        {{/unless}}
      {{/if}}
    </div>
  </div>
</div>

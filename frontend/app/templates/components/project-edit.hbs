{{#with (changeset project validations) as |projectChangeset|}}
  <div class="mb-2" id="project-content-edit">
    <div class="card-header bg-info">
      <div class="row">
        <div class="col-sm-6">
          Projekt bearbeiten
        </div>
        <div class="col-sm-6 text-right d-block">
          <DeleteWithConfirmation @entry={{project}}>
            LÃ¶schen
          </DeleteWithConfirmation>
        </div>
      </div>
    </div>
    <div class="border border-info rounded-bottom">
      <div class="card-body d-flex flex-column">
        <div class="row mb-2">
          <div class="col-sm-3">
            <div class="input-group centered-content-input">
              <DaterangeEdit @entity={{project}} />
            </div>
          </div>
          <div class="col-sm-7">
            <label for={{concat elementId "-name"}}>Projekt</label>
            <Input @id={{concat elementId "-name"}} @value={{projectChangeset.title}} class="form-control mb-2" />
            <label for={{concat elementId "-desc"}}>Beschreibung</label>
            <Textarea @id={{concat elementId "-desc"}} @value={{projectChangeset.description}} class="form-control" />
            <label for={{concat elementId "-role"}}>Rolle und Aufgaben</label>
            <Textarea @id={{concat elementId "-role"}} @value={{projectChangeset.role}} class="form-control" />
            <label for={{concat elementId "-tech"}}>Eingesetzte Technologien</label>
            <Textarea @id={{concat elementId "-tech"}} @value={{projectChangeset.technology}} class="form-control" />
          </div>
        </div>
        <div class="mt-auto">
          <button onclick={{action "submit" projectChangeset}} role="button" id="submit-button" class="btn btn-primary">Speichern</button>
          <button onclick={{action "abortEdit"}} role="button" class="btn abort-button">Abbrechen</button>
        </div>
      </div>
    </div>
  </div>
{{/with}}

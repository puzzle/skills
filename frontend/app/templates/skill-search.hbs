<div id="skill-search-header" class="header pt-3">
  {{#each this.filters as |filter index|}}
    {{#if (gt index 0)}}
      <p>Und</p>
    {{/if}}
    <div class="row">
      <div class="col-6 skills-power-select">
        <PowerSelect @selected={{filter.selectedSkill}} @options={{this.skills}} @onChange={{action "setSkill" index}} @searchField="title" @triggerClass="w-75 power-select-{{index}}" as |skill|>
          {{skill.title}}
        </PowerSelect>
      </div>

      <div class="col">
        <div class="col justify-content-center people-skill-level">
          <p class="description skillset-level-title">{{levelName filter.levelValue}}</p>
          <UiSlider class="skillsearch-selection-slider" @value={{filter.levelValue}} @ticks="1,2,3,4,5" @tooltip="hide" @min={{1}} @max={{5}} @immediateResponse={{true}} />
        </div>
      </div>
      <div class="col pt-3">
        <div >
          <a class="edit-buttons" role="button" data-toggle="tooltip" data-placement="top" title="Filter zur端cksetzen" onclick={{action "resetFilter" index}} >
            <i class="fa fa-redo"></i>
          </a>
          {{#if (gt this.filters.length 1)}}
            <a class="edit-buttons" role="button" data-toggle="tooltip" data-placement="top" title="Filter zur端cksetzen" onclick={{action "removeFilter" index}} >
              <i class="fa fa-window-close"></i>
            </a>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}

  {{#if (lt this.filters.length 5)}}
    <a class="edit-buttons" role="button" data-toggle="tooltip" data-placement="top" title="Skill hinzuf端gen" id="addSkillsButton" onclick={{action "addFilter"}} >
      <small>+ Skill hinzuf端gen (max. 5)</small>
    </a>
  {{/if}}
</div>
<div class="card mt-4">
  <div class="card-header bg-info" id="skill-search-results-header">
    <p class="text-dark header-text mb-0">Suchresultate</p>
  </div>
</div>
<div class="card mt-3 mb-5">
  <div id="skill-search-results" class="px-2 border border-info rounded-bottom">
    {{#if this.model}}
      {{#each this.sortSelection as |peopleSkill|}}
        <div class="p-2">
          <PeopleSkillShow @peopleSkill={{peopleSkill}} @showPersonName={{true}} @showSkillTitle={{true}} />
        </div>
      {{/each}}
    {{else}}
      <p class="m-2">Keine Resultate</p>
    {{/if}}
  </div>
</div>


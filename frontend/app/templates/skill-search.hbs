<div id="skill-search-header" class="header pt-3">
  <PowerSelect @selected={{this.selectedSkill}} @options={{this.skills}} @onChange={{action "setSkill"}} @searchField="title" @triggerClass="w-75" as |skill|>
    {{skill.title}}
  </PowerSelect>

  <div class="card mt-4">
    <div class="card-header bg-info">
      <p class="text-dark header-text mb-0">Suchresultate</p>
    </div>
  </div>

</div>
<div class="card mt-13 mb-5">
  <div id="skill-search-results" class="px-2 border border-info rounded-bottom">
    {{#if this.model}}
      {{#each this.model as |peopleSkill|}}
        <div class="p-2">
          <PeopleSkillShow @peopleSkill={{peopleSkill}} @showPersonName={{true}} />
        </div>
      {{/each}}
    {{else}}
      <p class="m-2">Keine Resultate</p>
    {{/if}}
  </div>
</div>

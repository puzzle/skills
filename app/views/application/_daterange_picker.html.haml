%div.d-flex.flex-column{"data-controller"=>"visibility"}
    %div.d-flex
        %p placeholder
        %p Monat
        %p Jahr
    %div.d-flex
        %p von 
        = f.select :month_from, Date::MONTHNAMES.compact.each_with_index.map { |month, index| [month, index + 1] }, {}, class: "form-select"
        = f.select :year_from, (Time.zone.now.year - 100)..(Time.zone.now.year + 1),{}, class: "form-select"
    %div{"data-visibility-target" => "hideable", :hidden => f.object.month_to.nil? && f.object.year_to.nil?}
        %div.d-flex
            %p bis
            = f.select :month_to, Date::MONTHNAMES.compact.each_with_index.map { |month, index| [month, index + 1] }, {}, class: "form-select", "data-active-default" => f.object.month_to.nil?
            = f.select :year_to, (Time.zone.now.year - 100)..(Time.zone.now.year + 1), {}, class: "form-select", "data-active-default" => f.object.year_to.nil?
    %div.d-flex
        %button{"data-action" => "visibility#toggleTargets", :class => "form-button", :type=> "button"} Toggle
        
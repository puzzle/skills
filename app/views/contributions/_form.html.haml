= form_with model: ([entry.person, entry]) do |f|
  = render('people/person_relations/form', form: f) do
    - content_for :input do
      = f.label :title
      = f.text_area :title, placeholder: "Titel", class: "form-control w-100"
      = f.label :reference
      = f.text_area :reference, placeholder: "Reference", class: "form-control w-100"
      = f.hidden_field :display_in_cv, value: false

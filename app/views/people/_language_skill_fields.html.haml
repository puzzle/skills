%div.mb-3.pb-3.border-bottom.border-black.nested-fields
  = f.hidden_field :_destroy
  %div= f.collection_select :language, common_languages_translated, :first, :last, {}, { class: "form-select mw-100", disabled: uneditable_language?(f.object.language) }
  %div= f.collection_select :language, common_languages_translated, :first, :last, {}, { class: "visually-hidden", disabled: !uneditable_language?(f.object.language) }
  %div Level
  %div= f.collection_select :level, %w[Keine A1 A2 B1 B2 C1 C2 Muttersprache], :itself, :itself, {}, class: "form-select mw-100"
  %div Zertifikat
  %div= f.text_field :certificate, class: "mw-100 form-control"
  - unless uneditable_language?(f.object.language)
    %div{"data-controller"=>"dynamic-fields"}= link_to "Remove", "#", { class: "remove_fields", 'data-action' => 'dynamic-fields#removeField' }
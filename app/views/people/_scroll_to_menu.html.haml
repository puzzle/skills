%div.sidebar
  %div
    - items.each do | item |
      %div.sidebar-item.w-100{"data-scroll-target": "listItem", "data-action": "click->scroll#scrollToElement",
            "data-scroll-id-param": item.parameterize}
        %span
          - if translate
            = t "profile.#{item}"
          - else
            = item

  %div.sidebar-extras
    = yield
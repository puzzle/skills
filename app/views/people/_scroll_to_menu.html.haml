%div.d-flex.flex-column.bg-skills-gray.border.border-light-subtle.border-2

%div.sidebar
  - items.each do | item |
    %div.sidebar-item{"data-scroll-target": "listItem", "data-action": "click->scroll#scrollToElement",
          "data-scroll-id-param": item}
      %span
        - if translate
          = t "profile.#{item}"
        - else
          = item

%div.sidebar-extras
  = yield
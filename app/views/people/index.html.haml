%div.mt-2
  = render partial: "people/search", locals: { person: nil }
- flash.each do |type, msg|
  - if type == 'error'
    .alert.alert-danger.mt-3
      = msg
%div.mt-3
  %h1.d-inline-block.me-3.banner-text 
    = ti("welcome")
  =image_tag('logo.svg', width: '340', class: 'align-baseline test')
  %h4.banner-sub-text.mt-3
    = ti("choose_create_person")
%div.row.justify-content-start
  - unless find_person_by_auth_user.nil?
    %div.col-3.p-0.me-3
      = link_to ti('profile'), person_path(find_person_by_auth_user), method: 'get', class: "btn btn-outline-primary h-100 w-100 d-flex justify-content-center align-items-center"
    %div.col-3.p-0
      = link_to ti('export_cv', {default_location: (BranchAdress.find_by(default_branch_adress: true) || BranchAdress.first).short_name}), export_person_path(id: find_person_by_auth_user.id, location: (BranchAdress.find_by(default_branch_adress: true) || BranchAdress.first).id), method: 'get', class: "btn btn-outline-primary w-100"

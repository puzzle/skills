= turbo_stream.update "person-skill-overview" do
  = render "people/people_skills/overview"

= turbo_stream.replace "scroll-sidebar" do
  = render('people/scroll_to_menu', items: parent_categories_with_rated_skills) do
    = add_action_link_modal

= turbo_stream.update "default-skill-#{entry.skill.id}" do
  = form_with model: entry, url: polymorphic_path([@person, entry], rating: params["rating"]) do |form|
    = render "people/people_skills/edit_form", ff: form, show_category: true

= turbo_stream.update "skill-auto-save-message-#{entry.skill_id}" do
  = ti("auto_save_message")
  = image_tag("save", class: "px-2")
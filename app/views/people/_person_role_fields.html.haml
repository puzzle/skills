%div.border.border-dark-subtle.rounded.p-1.fw-light.nested-fields
  = f.hidden_field :_destroy
  = f.label :role
  = f.collection_select :role_id, Role.order(:name), :id, :name, {}, {class: "form-select w-100 role-select", **disabled_with_ptime_sync }
  %div
    = f.label :person_role_level
    %div.d-flex.fw-light
      = f.collection_select :person_role_level_id, PersonRoleLevel.order(:level), :id, :level, {}, {class: "form-select w-50 me-1 role-level-select", **disabled_with_ptime_sync }
      = f.number_field :percent, {in: 0..200, step: 1, class: "form-control w-50 person-role-percent", **disabled_with_ptime_sync }
- unless ptime_sync_active?
  %div{"data-controller"=>"dynamic-fields"}= link_to "Remove", "#", { class: "remove_fields", 'data-action' => 'dynamic-fields#removeField'}
= form_with(model: @certificate) do |f|
  .mb-4.w-100
    = f.label :title, class: "form-label"
    = f.text_field :title, class: "form-control"
  .mb-2.w-100
    = f.label :designation, class: "form-label"
    = f.text_field :designation, class: "form-control"
  .mb-2.w-100
    = f.label :provider, class: "form-label"
    = f.text_field :provider, class: "form-control"
  .mb-2.w-100
    = f.label :points_value, class: "form-label"
    = f.number_field :points_value, class: "form-control", step: 0.5
  .mb-2.w-100
    = f.label :comment, class: "form-label"
    = f.text_field :comment, class: "form-control"
  .mb-2.w-100
    = f.label :course_duration, class: "form-label"
    = f.number_field :course_duration, class: "form-control"
  .mb-2.w-100
    = f.label :exam_duration, class: "form-label"
    = f.number_field :exam_duration, class: "form-control"
  .mb-2.w-100
    = f.label :type_of_exam, class: "form-label"
    = f.text_field :type_of_exam, class: "form-control"
  .mb-2.w-100
    = f.label :study_time, class: "form-label"
    = f.number_field :study_time, class: "form-control"

  .mb-1.mt-4
    = f.button class:"btn btn-primary", "aria-label": "Close"
    = link_to "Cancel", certificates_path, class: "btn btn-outline-secondary", "data-bs-dismiss":"modal"